// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  name         String
  email        String         @unique
  phone        String
  address      String
  DonationList DonationList[]

  @@map("user")
}

model RiskSituation {
  id   Int    @id @default(autoincrement())
  type String @unique
  Risk Risk[]

  @@map("riskSituation")
}

model Risk {
  id              Int    @id @default(autoincrement())
  riskSituationId Int
  cause           String
  solution        String

  riskSituation RiskSituation @relation(fields: [riskSituationId], references: [id])

  @@map("risk")
}

model DonationList {
  id         String     @id @default(uuid())
  userId     String
  name       String
  donation   Donation[]
  wasDonated Boolean

  user User @relation(fields: [userId], references: [id])

  @@map("donationList")
}

model Donation {
  id             String @id @default(uuid())
  donationListId String
  name           String
  quantity       Int
  measure        String

  donationList DonationList @relation(fields: [donationListId], references: [id])

  @@map("donation")
}

model Measure {
  id   Int    @id @default(autoincrement())
  type String

  @@map("measure")
}

model PanicFunction {
  id          String   @id @default(uuid())
  city        String
  typeRisk    String
  date        DateTime
  concluded   Boolean
  riskAlertId String?

  RiskAlert RiskAlert? @relation(fields: [riskAlertId], references: [id])

  @@map("panicFunction")
}

model RiskAlert {
  id             String          @id @default(uuid())
  typeRisk       String
  city           String
  triggerCount   Int
  triggeredAt    DateTime
  panicFunctions PanicFunction[]
  TwitterPost    TwitterPost[]

  @@map("riskAlert")
}

model TwitterPost {
  id          String   @id @default(uuid())
  riskAlertId String
  content     String
  date        DateTime

  riskAlert RiskAlert @relation(fields: [riskAlertId], references: [id])

  @@map("twitterPost")
}
